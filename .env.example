# =======================================================
# INSTAGRAM AUTO POSTER - ENVIRONMENT CONFIGURATION
# =======================================================
# Copy this file to .env and fill in your actual values

# =======================================================
# INSTAGRAM CREDENTIALS (REQUIRED)
# =======================================================
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# =======================================================
# VNC CONFIGURATION (FOR REMOTE ACCESS)
# =======================================================
# Password for VNC access (change this for security)
VNC_PASSWORD=instagram123

# VNC display and ports (usually don't need to change)
VNC_DISPLAY=:1
VNC_PORT=5901
VNC_WEB_PORT=6080

# =======================================================
# OPENAI/CHATGPT CONFIGURATION (OPTIONAL)
# =======================================================
# OpenAI API Key for text enhancement (optional)
OPENAI_API_KEY=your_openai_api_key

# Enable ChatGPT text enhancement (true/false)
USE_CHATGPT=false

# =======================================================
# POSTING SCHEDULE CONFIGURATION
# =======================================================
# Content directory (usually don't need to change)
CONTENT_DIR=content

# Default posting time (24h format)
POST_HOUR=12
POST_MINUTE=0

# =======================================================
# FLASK APPLICATION CONFIGURATION
# =======================================================
FLASK_ENV=production
FLASK_APP=app.py

# =======================================================
# DISPLAY CONFIGURATION (FOR VNC)
# =======================================================
DISPLAY=:1
PYTHONUNBUFFERED=1 